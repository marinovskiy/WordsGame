<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="ua.marinovskiy.wordsgame">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:name=".MyApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name=".activities.MainActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action..MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="ua.marinovskiy.wordsgame.activities.ClassicGameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="ua.marinovskiy.wordsgame.activities.GameModeActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="ua.marinovskiy.wordsgame.activities.HelpActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="ua.marinovskiy.wordsgame.activities.RecordsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.ClassicGameSettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name="ua.marinovskiy.wordsgame.activities.ArcadeGameActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

        <activity
            android:name=".activities.ArcadeGameSettingsActivity"
            android:label="@string/app_name"
            android:screenOrientation="portrait" />

    </application>

</manifest>
